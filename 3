#include <iostream>

using namespace std;

int main()
{
    int n, i, j, t, k, l, buf, h, K;
    cin>>n;
    cout<<"K=";
    cin>>K;
    int a[n], b[n], c[n];
    setlocale(LC_ALL, " ");
    t=l=k=0;
    for (i=0; i<n; i++)
    {
        cin>>a[i];
    }
    for (i=l; i<n; i++)
    {
        if (a[i]==a[i+1])
        {
            t+=1;
        } else
        {
            l=t;
            buf=a[i];
            l+=1;
            b[k]=l;
            c[k]=buf;
            k+=1;
            t=0;
        }
    }
    h=b[k-1];
    b[k-1]=c[K];
    c[K]=h;
    cout << "Массив из серий:" << endl;
    for (int i = 0; i < k; i++)
    {
        cout<<b[i]<<" ";
    }
    cout << endl;
    cout << "Массив из элементов:" << endl;
    for (int i = 0; i < k; i++)
    {
        cout<<c[i]<<" ";
    }
    return 0;
}
